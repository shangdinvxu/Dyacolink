<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/step_activity_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <include layout="@layout/tw_distance_top"></include>
    </RelativeLayout>

    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/step_tv_date"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/lightgrey"
        android:text=""
        android:gravity="center"
        android:textColor="@color/highgrey"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/step_middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include layout="@layout/tw_step_buttom"></include>

    </LinearLayout>

</LinearLayout>
