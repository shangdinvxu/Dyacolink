<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rank_content_head"
    android:orientation="vertical"
>

    <LinearLayout
        android:id="@+id/rank_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="220px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ranking_activity_listview_item_rank"
            android:layout_width="128px"
            android:layout_height="128px"
            android:layout_marginStart="45px"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:text="12"
            android:textSize="@dimen/m00_font_size_28pt" />

        <com.linkloving.dyh08.logic.utils.CircleImageView
            android:id="@+id/ranking_activity_listview_item_imageView"
            android:layout_width="200px"
            android:layout_height="200px"
            android:padding="10px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/default_avatar_m"
            app:border_width="2dp"
            app:border_color="@color/light"
            android:contentDescription="@string/imageView"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20px"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ranking_activity_listview_item_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lisa Han"
                    android:textColor="@color/m00_text_black_333333_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ranking_list_item_come_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="asdsaddasd"
                    android:textColor="@color/yellow_title"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ranking_activity_listview_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.5"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/goal_step"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/ranking_list_item_dingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rank_check_box_selector"
            android:layout_marginRight="80px"
            android:layout_gravity="center"
            android:gravity="center"
            android:button="@null"
            android:text=""
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:src="@mipmap/underline_set" />
</LinearLayout>