<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dismiss"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/triangle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:text="@string/heartrateSwitch"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/selectline_yellow"
        />
        <RelativeLayout
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:gravity="center_horizontal"
                android:text="@string/syncdata"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:id="@+id/syncdata" />
        </RelativeLayout>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/selectline"
        />
    <RelativeLayout
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_horizontal"
            android:text="@string/usecellilar"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:id="@+id/usecellilar" />
    </RelativeLayout>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/selectline"
        />
    <RelativeLayout
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_horizontal"
            android:text="@string/retrievedata"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:src="@mipmap/selectnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:id="@+id/retrievedata" />
    </RelativeLayout>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/selectline"
        />

    </LinearLayout>

</LinearLayout>