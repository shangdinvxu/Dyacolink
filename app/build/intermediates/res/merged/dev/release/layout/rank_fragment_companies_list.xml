<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/rank_swipe_refresh_companies_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/companies_time_switch"
        android:scrollbars="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/companies_list_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/companies_time_switch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#22000000"
        android:gravity="center">

        <Button
            android:id="@+id/ranking_activity_companies_leftBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_report_page_dataselect_left_btn"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/ranking_activity_companies_dateView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/middle_gray1"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/companies_imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@mipmap/main_fragment_title_arrow" />
        </LinearLayout>

        <Button
            android:id="@+id/ranking_activity_companies_rightBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_report_page_dataselect_right_btn"
            android:text="" />
    </LinearLayout>


    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
</RelativeLayout>
