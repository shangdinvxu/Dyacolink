<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <!--toolbar中间的title-->
        <TextView
            android:id="@+id/title"
            android:layout_width="250px"
            android:layout_height="76px"
            android:layout_marginEnd="45px"
            android:layout_gravity="center"
            />
        <!--toolbar右边的按钮-->
        <LinearLayout
            android:id="@+id/id_txt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@null"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:orientation="horizontal" >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/goal_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textSize="@dimen/m00_font_size_36pt"
                    android:textColor="@color/chat_view_orange"
                    android:text="5000"/>
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/activity_horizontal_margin"
                    android:layout_height="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center"
                    android:background="@mipmap/goal_image"
                    android:id="@+id/gogalImage"
                    />
                <TextView
                    android:text="REE"
                    android:id="@+id/ree"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

</FrameLayout>
