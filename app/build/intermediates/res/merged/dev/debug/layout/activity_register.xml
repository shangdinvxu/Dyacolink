<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:background="@color/orange">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:background="@drawable/alarm_setting_content_bg"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/register_form_emailEdit"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line_et_bg_xml"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/login_from_email"
                android:singleLine="true"
                android:text=""
                android:textColor="#666666"
                android:textColorHighlight="@color/white"
                android:textColorHint="#999999"
                android:textSize="18sp"></EditText>

            <EditText
                android:id="@+id/register_form_passwordEdit"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line_et_bg_xml"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/register_form_view_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text=""
                android:textColor="#666666"
                android:textColorHighlight="@color/white"
                android:textColorHint="#999999"
                android:textSize="18sp">

            </EditText>

            <EditText
                android:id="@+id/register_form_conformPswEdit"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line_et_bg_xml"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/register_form_view_confirmpsw"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text=""
                android:textColor="#666666"
                android:textColorHighlight="@color/white"
                android:textColorHint="#999999"
                android:textSize="18sp">

            </EditText>

            <Button
                android:id="@+id/register_form_submitBtn"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/register_continue"
                android:textColor="@color/orange"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_agreeLisenseCb"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_form_agreeLisenseCb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/m00_font_size_18pt"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_agreeLisenseCb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register_form_agreeLisenseCb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/m00_font_size_18pt"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/register_form_agreeLisenseCb_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/m00_font_size_18pt"
            />
        <TextView
            android:id="@+id/register_form_agreeLisenseCb_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/m00_font_size_18pt"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>
