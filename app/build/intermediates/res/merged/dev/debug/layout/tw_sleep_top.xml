<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@mipmap/un850px">
        <ImageView
            android:id="@+id/imageviewMoon"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/tw_sleep_top_moon"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SLEEP"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/sleep_hour_tv"
      style="@style/sleep_textview_hour"
            />

        <TextView
       style="@style/sleep_top_hour"
            />
        <TextView
            android:id="@+id/sleep_minute_tv"
            style="@style/sleep_textview_hour"
            android:text="00"
            />
        <TextView
            android:text="minute"
            style="@style/sleep_top_hour"
            />
    </LinearLayout>
    <TextView
            android:layout_gravity="center_horizontal"
        android:text="@string/avgtime"
        style="@style/sleep_top_hour"
        />
  <LinearLayout
      android:layout_marginTop="5dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp">
         <TextView
             android:id="@+id/sleep_lightSleep"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="-5dp"
             android:text="4.0"
             android:textColor="@color/white"
             android:textSize="55sp"
             />
         <TextView
             android:id="@+id/Lightsleep"
             android:layout_width="100dp"
             android:layout_height="20dp"
             android:lines="1"
             android:text="@string/lightsleep"
             android:textColor="@color/white"
             android:layout_marginLeft="3dp"
             android:textSize="11sp"
             android:layout_toRightOf="@+id/sleep_lightSleep"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="hours"
             android:textSize="15sp"
             android:textColor="@color/white"
             android:layout_marginTop="28dp"
             android:layout_marginLeft="4dp"
             android:layout_toRightOf="@+id/sleep_lightSleep"
             />


     </RelativeLayout>
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >
          <TextView
              android:id="@+id/sleep_DeepSleep"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="4.0"
              android:layout_marginTop="-5dp"
              android:textColor="@color/white"
              android:textSize="55sp"
              />
          <TextView
              android:id="@+id/Deep_sleep"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:text="@string/deepsleep"
              android:textColor="@color/white"
              android:lines="1"
              android:layout_marginLeft="3dp"
              android:textSize="11sp"
              android:layout_toRightOf="@+id/sleep_DeepSleep"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="hours"
              android:textSize="15sp"
              android:textColor="@color/white"
              android:layout_marginTop="28dp"
              android:layout_marginLeft="4dp"
              android:layout_toRightOf="@+id/sleep_DeepSleep"
              />


      </RelativeLayout>



  </LinearLayout>
</LinearLayout>
