<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray"
    >
    <LinearLayout
        android:id="@+id/handup_Synchronize_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/handup_btn_Synchronize_device"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/handup_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_below="@+id/handup_Synchronize_device"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/wurao_layout"
            android:layout_width="fill_parent"
            android:layout_height="250px"
            android:background="@color/device_item_bg"
            android:layout_marginBottom="2px"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_wurao"
                android:layout_width="144px"
                android:layout_height="144px"
                android:layout_marginLeft="86px"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/s_disturb_on_144px"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/disturb_tv"
                    android:layout_marginLeft="20px"
                    android:layout_gravity="center_vertical"
                    android:text="@string/handup_setting"
                    android:textColor="@color/yellow_title"
                    android:textSize="@dimen/m00_font_size_30pt" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                    <CheckBox
                    android:id="@+id/handup_switch_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/longsit_check_box_selector"
                    android:layout_gravity="right"
                    android:layout_marginRight="78px"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="250px"
            android:background="@color/device_item_bg"
            android:layout_marginBottom="2px"
            android:id="@+id/disturb_info"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginStart="120px"
                android:layout_marginTop="90px"
                android:src="@mipmap/s_disturb_ps_72px"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15px"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/handup_setting_intro"
                    android:textColor="@color/gray_dark_for_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/handup_setting_intro1"
                    android:textColor="@color/gray_dark_for_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/handup_setting_intro2"
                    android:textColor="@color/gray_dark_for_text"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/handup_time_ll"
            android:layout_width="fill_parent"
            android:layout_height="250px"
            android:background="@color/device_item_bg"
            android:orientation="horizontal"
            android:layout_marginBottom="20px"
            android:elevation="10px"
            >

            <ImageView
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginStart="120px"
                android:layout_marginTop="90px"
                android:src="@mipmap/s_inactive_clock_72px"/>


            <LinearLayout
                android:id="@+id/handup_start_time_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/long_sit_start_time"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginBottom="17px">

                </TextView>

                    <TextView
                        android:id="@+id/handup_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:00"
                        android:textSize="@dimen/m00_font_size_24pt"
                        android:textColor="@color/gray_dark_for_text"
                        android:layout_marginTop="17px"  />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/handup_end_time_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/long_sit_end_time"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginBottom="17px" />

                    <TextView
                        android:id="@+id/handup_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00"
                        android:textSize="@dimen/m00_font_size_24pt"
                        android:textColor="@color/gray_dark_for_text"
                        android:layout_marginTop="17px" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
