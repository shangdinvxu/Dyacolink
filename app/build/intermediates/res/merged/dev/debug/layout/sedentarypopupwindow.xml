<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/triangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sendentarynotif"
            android:textColor="@color/blue"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/selectline_yellow" />

        <RelativeLayout
            android:visibility="visible"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/Starttime"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                android:text=""
                android:id="@+id/starttimeTextview"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="46dp"/>

            <ImageView
                android:id="@+id/startTimeNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/selectnext" />
        </RelativeLayout>

        <ImageView
            android:visibility="visible"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/selectline" />

        <RelativeLayout
            android:visibility="visible"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/Endtime"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                android:text=""
                android:id="@+id/endtimeTextview"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="46dp"/>

            <ImageView
                android:id="@+id/endTimeNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/selectnext" />
        </RelativeLayout>

        <ImageView
            android:visibility="visible"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/selectline" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/Intervals"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                android:text=""
                android:id="@+id/intervalTextview"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="46dp"/>

            <ImageView
                android:id="@+id/Intervalsnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/selectnext" />
        </RelativeLayout>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/selectline" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/interval"
                android:textSize="16sp" />

            <Switch
                android:switchMinWidth="50dp"
                android:track="@drawable/switch_track"
                android:thumb="@android:color/transparent"
                android:id="@+id/switchinterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/selectline" />

    </LinearLayout>

</LinearLayout>