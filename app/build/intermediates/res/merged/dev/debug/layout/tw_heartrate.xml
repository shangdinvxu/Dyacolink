<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:composition="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="140dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/heart"
            android:layout_marginLeft="50dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/resting"
                android:gravity="center"
                android:textSize="40sp"
                android:text="000"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/avgerage"
                android:gravity="center"
                android:textSize="40sp"
                android:text="--"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/Restingbpm"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/Average"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/groups_time"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#EEEEEE"
        android:gravity="center"
        android:text="2016/04/25 am.6:00"

        />
    <LinearLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/middle_framelayout"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_weight="7"
            android:layout_height="0dp">
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <RadioGroup
                android:id="@+id/tw_Heartrate_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                >
                <RadioButton
                    android:id="@+id/Heartrate_day"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@mipmap/d_off_72px"
                    android:text="@string/Day_View"
                    android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/Heartrate_week"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@mipmap/w_off_72px"
                    android:text="@string/Week_View"
                    android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/Heartrate_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@mipmap/m_off_72px"
                    android:text="@string/Month_View"
                    android:textColor="@color/white" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>