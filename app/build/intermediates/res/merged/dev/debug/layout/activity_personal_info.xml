<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_peosoninfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.linkloving.dyh08.logic.UI.personal.PersonalInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:gravity="center"
        android:background="@color/step_data_black">

        <!-- 头像 -->
        <com.linkloving.dyh08.logic.utils.CircleImageView
            android:id="@+id/user_head"
            android:layout_width="288px"
            android:layout_height="288px"
            android:src="@mipmap/default_avatar_m"
            app:border_width="2dp"
            app:border_color="@color/light"
            android:contentDescription="@string/imageView" />
    </RelativeLayout>

        <RelativeLayout
            android:background="@color/main_bg_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_name_account_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginBottom="20px"
            android:elevation="5dp"
         >
            <!--昵称-->
            <LinearLayout
                android:id="@+id/linear_name"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="48px"
                        android:layout_height="match_parent"
                        android:text="@string/nick_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m00_font_size_24pt"
                        />
                    <TextView
                        android:gravity="center_vertical|right"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="48px"
                        android:id="@+id/text_nick_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="MARK"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:paddingStart="48px"
                android:paddingEnd="30px"
                android:layout_height="1px"
                android:src="@color/main_bg_gray"/>
            <!--帐号-->
            <LinearLayout
                android:id="@+id/linear_account"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:layout_marginBottom="2px"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="48px"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m00_font_size_24pt"
                        android:text="@string/account"/>
                    <TextView
                        android:gravity="center_vertical|right"
                        android:layout_marginRight="48px"
                        android:id="@+id/text_account"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/menu_deliver"
                    android:contentDescription="@string/imageView"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:paddingStart="48px"
                android:paddingEnd="30px"
                android:layout_height="1px"
                android:src="@color/main_bg_gray"/>
            <!--密码-->
            <LinearLayout
                android:id="@+id/linear_pwd"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:layout_marginBottom="10px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="48px"
                        android:layout_height="match_parent"
                        android:text="@string/pwd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/m00_font_size_24pt"/>
                    <TextView
                        android:gravity="center_vertical|right"
                        android:id="@+id/text_pwd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

         </LinearLayout>

       <LinearLayout
           android:layout_marginTop="72px"
           android:id="@+id/linear_sex_bir_lenth"
           android:layout_below="@+id/linear_name_account_pwd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@color/white"
           android:layout_marginBottom="20px"
           android:elevation="5dp"
         >
           <!--性别-->
           <LinearLayout
               android:id="@+id/linear_sex"
               android:layout_width="match_parent"
               android:layout_height="144px"
               android:layout_marginBottom="2px"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">
                   <TextView
                       android:textSize="@dimen/m00_font_size_24pt"
                       android:textColor="@color/black"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:gravity="center_vertical"
                       android:layout_marginStart="48px"
                       android:layout_height="match_parent"
                       android:text="@string/sex"/>
                   <TextView
                       android:gravity="center_vertical|right"
                       android:id="@+id/text_sex"
                       android:layout_marginRight="48px"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"/>
               </LinearLayout>
           </LinearLayout>
           <ImageView
               android:layout_width="match_parent"
               android:paddingStart="48px"
               android:paddingEnd="30px"
               android:layout_height="1px"
               android:src="@color/main_bg_gray"/>
           <!--生日-->
           <LinearLayout
               android:id="@+id/linear_birthday"
               android:layout_width="match_parent"
               android:layout_height="144px"
               android:layout_marginBottom="2px"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">
                   <TextView
                       android:textSize="@dimen/m00_font_size_24pt"
                       android:textColor="@color/black"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:gravity="center_vertical"
                       android:layout_marginStart="48px"
                       android:layout_height="match_parent"
                       android:text="@string/birthday"/>
                   <TextView
                       android:gravity="center_vertical|right"
                       android:id="@+id/text_birthday"
                       android:layout_marginRight="48px"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"/>
               </LinearLayout>
           </LinearLayout>
           <ImageView
               android:layout_width="match_parent"
               android:paddingStart="48px"
               android:paddingEnd="30px"
               android:layout_height="1px"
               android:src="@color/main_bg_gray"/>
           <!--身高-->
           <LinearLayout
               android:id="@+id/linear_lenth"
               android:layout_width="match_parent"
               android:layout_height="144px"
               android:layout_marginBottom="2px"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">
                   <TextView
                       android:textSize="@dimen/m00_font_size_24pt"
                       android:textColor="@color/black"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:gravity="center_vertical"
                       android:layout_marginStart="48px"
                       android:layout_height="match_parent"
                       android:text="@string/lenth"/>
                   <TextView
                       android:gravity="center_vertical|right"
                       android:id="@+id/text_lenth"
                       android:layout_marginRight="48px"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"/>
               </LinearLayout>
           </LinearLayout>
        </LinearLayout>

       <LinearLayout
           android:layout_marginTop="72px"
           android:id="@+id/linear_sign"
           android:layout_width="match_parent"
           android:layout_height="144px"
           android:layout_marginBottom="20px"
           android:elevation="5dp"
           android:layout_below="@+id/linear_sex_bir_lenth"
           android:background="@color/white"
           >
           <!--个性签名-->
           <LinearLayout
               android:layout_gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:layout_marginStart="48px"
                   android:text="@string/sign"
                   android:textSize="@dimen/m00_font_size_24pt"
                   android:textColor="@color/black"
                   android:layout_weight="1"/>
                <TextView
               android:gravity="center_vertical|right"
               android:id="@+id/text_sign"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:paddingRight="5dp"
              />
               </LinearLayout>

           </LinearLayout>
       </LinearLayout>



        </RelativeLayout>



    </LinearLayout>



</RelativeLayout>
