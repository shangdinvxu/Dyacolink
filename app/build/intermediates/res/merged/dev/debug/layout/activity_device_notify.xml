            android:textColor="@color/text_gray"
            android:textSize="@dimen/m00_font_size_36pt" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4" />
        <CheckBox
            android:id="@+id/WX_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="72px"
            android:background="@drawable/longsit_check_box_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="right" />
    </LinearLayout>
    <!--连爱-->
    <LinearLayout
        android:id="@+id/Link_layout"
        android:layout_width="fill_parent"
        android:layout_height="270px"
        android:layout_marginBottom="20px"
        android:elevation="10px"
        android:orientation="horizontal"
        android:background="@color/device_item_bg">

        <ImageView
            android:id="@+id/Link_img"
            android:layout_width="144px"
            android:layout_height="144px"
            android:layout_marginStart="80px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/set_linkloving_off" />

        <TextView
            android:id="@+id/Link_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/menu_notify_link"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/m00_font_size_36pt" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4" />
