<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/power_Synchronize_device"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/power_btn_Synchronize_device"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linearLayout_pm1"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_marginBottom="2px"
                android:background="@color/device_item_bg"
                android:layout_below="@+id/power_Synchronize_device"
                >
                <ImageView
                    android:id="@+id/pm1_pic"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="86px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/battery_pm1_off"
                    />

                <LinearLayout
                    android:layout_toRightOf="@id/pm1_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="250px"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/text_pm1_content_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pm1_content_1"/>

                    <TextView
                        android:id="@+id/text_pm1_content_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pm1_content_2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:id="@+id/imageView_pm1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="78px"
                        android:src="@mipmap/btn_off"
                        />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/linearLayout_pm2"
                android:layout_width="match_parent"
                android:layout_height="350px"
                android:layout_marginBottom="2px"
                android:background="@color/device_item_bg"
                android:layout_centerVertical="true"
                android:layout_below="@+id/power_Synchronize_device" >

                <ImageView
                    android:id="@+id/pm2_pic"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="86px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/battery_pm2_off"
                    />

                <LinearLayout
                    android:layout_toRightOf="@id/pm2_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="250px"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="250px"
                    android:elevation="10px"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/text_pm2_content_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pm2_content_1"/>

                    <TextView
                        android:id="@+id/text_pm2_content_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/pm2_content_2"/>
                    <TextView
                        android:id="@+id/text_pm2_content_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/pm2_content_3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:id="@+id/imageView_pm2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="78px"
                        android:src="@mipmap/btn_off"
                        />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout_pm3"
                android:layout_width="match_parent"
                android:layout_height="450px"
                android:layout_marginBottom="20px"
                android:elevation="10px"
                android:background="@color/device_item_bg"
                android:layout_below="@+id/power_Synchronize_device" >

                <ImageView
                    android:id="@+id/pm3_pic"
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginLeft="86px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/battery_pm3"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20px"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/text_pm3_content_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/menu_power_help4"/>

                    <TextView
                        android:id="@+id/text_pm3_content_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/pm3_content_2"/>
                    <TextView
                        android:id="@+id/text_pm3_content_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/pm3_content_3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="228px"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:id="@+id/imageView_pm3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="78px"
                        android:src="@mipmap/btn_off"
                        />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>
