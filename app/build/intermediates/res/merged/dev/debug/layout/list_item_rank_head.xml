<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rank_list_layout_head"
        android:layout_width="fill_parent"
        android:layout_height="300px"
        android:background="@color/rank_mygray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ranking_activity_listview_item_rank_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="10sp" />

        <com.linkloving.dyh08.logic.utils.CircleImageView
            android:id="@+id/ranking_activity_listview_item_imageView_head"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginLeft="96px"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/imageView"
            android:src="@mipmap/default_avatar_m"
            app:border_color="@color/light"
            app:border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20px"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ranking_activity_listview_item_nickname_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lisa Han"
                    android:textColor="@color/m00_text_black_333333_color"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ranking_activity_listview_item_distance_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.5"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/goal_step"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/ranking_list_item_myRank_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="asdsaddasd"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/ranking_list_item_dingValue_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/rank_check_box_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="@mipmap/underline_set" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>