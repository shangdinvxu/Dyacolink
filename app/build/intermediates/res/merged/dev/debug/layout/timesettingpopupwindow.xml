<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:paddingBottom="50dp">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/dismiss"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/triangle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:text="@string/timesetting"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/selectline_yellow"
        />
    <RelativeLayout
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/clock_1"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:text="00:00"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Switch
            android:switchMinWidth="50dp"
            android:track="@drawable/switch_track"
            android:thumb="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="46dp"
            android:id="@+id/timesetting1" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/ok_picture"
            android:src="@mipmap/ok_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/selectline"
        />
