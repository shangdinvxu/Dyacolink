<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:id="@+id/shuju"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:background="@color/step_data_black">
            <TextView
                android:id="@+id/data_count_title"
                android:gravity="right|center_vertical"
                android:paddingEnd="10dp"
                android:textSize="@dimen/m00_font_size_24pt"
                android:textColor="@color/device_blue_bg"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/step_count"
                android:text=""
                android:textColor="@color/device_blue_bg"
                android:textSize="@dimen/m00_font_size_30pt"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@color/step_data_gray2"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/shujumingxi"
                android:textColor="@color/smssdk_lv_item_divider"
                />
        </LinearLayout>
        <ListView
            android:id="@+id/listview_step"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/null_data_LL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
         >
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@mipmap/null_data" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/general_null_data"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>