<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/longsit_layout"
    android:background="@color/main_bg_gray"
    >

    <LinearLayout
        android:id="@+id/longsit_Synchronize_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/longsit_btn_Synchronize_device"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/longsit_framelayout"
        android:layout_width="fill_parent"
        android:layout_height="250px"
        android:background="@color/device_item_bg"
        android:layout_marginBottom="2px"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_longsit"
            android:layout_width="144px"
            android:layout_height="144px"
            android:layout_marginLeft="86px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/s_inactive_on_144px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_longsit"
            android:layout_marginLeft="20px"
            android:layout_gravity="center_vertical"
            android:text="@string/long_sit_text"
            android:textColor="@color/yellow_title"
            android:textSize="@dimen/m00_font_size_30pt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <CheckBox
                android:id="@+id/longsit_switch_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/longsit_check_box_selector"
                android:layout_gravity="right"
                android:layout_marginRight="78px"
                android:button="@null"
                android:checked="true"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/longsit_time_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longsit_framelayout"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/handup_time_ll"
            android:layout_width="fill_parent"
            android:layout_height="250px"
            android:background="@color/device_item_bg"
            android:orientation="horizontal"
            android:layout_marginBottom="2px"
            >

            <ImageView
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginStart="120px"
                android:layout_marginTop="90px"
                android:src="@mipmap/s_inactive_clock_72px"/>


            <LinearLayout
                android:id="@+id/long_sit_start_time_one_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/long_sit_start_time"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginBottom="17px">

                </TextView>

                <TextView
                    android:id="@+id/long_sit_start_time_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginTop="17px"  />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/long_sit_end_time_one_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/long_sit_end_time"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginBottom="17px" />

                <TextView
                    android:id="@+id/long_sit_end_time_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginTop="17px" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="250px"
            android:background="@color/device_item_bg"
            android:orientation="horizontal"
            android:layout_marginBottom="2px"
            >

            <ImageView
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginStart="120px"
                android:layout_marginTop="90px"
                android:src="@mipmap/s_inactive_clock_72px"/>


            <LinearLayout
                android:id="@+id/long_sit_start_time_two_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/long_sit_start_time"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginBottom="17px">

                </TextView>

                <TextView
                    android:id="@+id/long_sit_start_time_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginTop="17px"  />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/long_sit_end_time_two_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/long_sit_end_time"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginBottom="17px" />

                <TextView
                    android:id="@+id/long_sit_end_time_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textSize="@dimen/m00_font_size_24pt"
                    android:textColor="@color/gray_dark_for_text"
                    android:layout_marginTop="17px" />


            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250px"
        android:background="@color/device_item_bg"
        android:orientation="horizontal"
        android:layout_marginBottom="20px"
        android:elevation="10px"
        >

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginStart="120px"
            android:layout_marginTop="90px"
            android:src="@mipmap/s_inactive_foot_72px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder_step"
                android:textSize="@dimen/m00_font_size_24pt"
                android:textColor="@color/gray_dark_for_text"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <EditText
                android:id="@+id/long_sit_step_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:textSize="@dimen/m00_font_size_30pt"
                android:textColor="@color/gray_dark_for_text"
                android:text="60" />
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
