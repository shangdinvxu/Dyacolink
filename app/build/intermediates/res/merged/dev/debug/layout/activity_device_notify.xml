<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_gray"
    >

    <LinearLayout
        android:id="@+id/incoming_Synchronize_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/incoming_btn_Synchronize_device"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
    <!--来电-->
    <LinearLayout
        android:id="@+id/call_layout"
        android:layout_width="fill_parent"
        android:layout_height="270px"
        android:layout_marginBottom="20px"
        android:elevation="10px"
        android:orientation="horizontal"
        android:background="@color/device_item_bg"
        >

        <ImageView
            android:id="@+id/call_img"
            android:layout_width="144px"
            android:layout_height="144px"
            android:layout_marginStart="80px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/set_phone_off" />

        <TextView
            android:id="@+id/call_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/menu_notify_call"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/m00_font_size_36pt" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4" />

        <CheckBox
            android:id="@+id/call_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="72px"
            android:background="@drawable/longsit_check_box_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="right" />

    </LinearLayout>
    <!--短信-->
    <LinearLayout
        android:id="@+id/mesgsae_layout"
        android:layout_width="fill_parent"
        android:layout_height="270px"
        android:layout_marginBottom="20px"
        android:elevation="10px"
        android:orientation="horizontal"
        android:background="@color/device_item_bg">

        <ImageView
            android:id="@+id/mesgsae_img"
            android:layout_width="144px"
            android:layout_height="144px"
            android:layout_marginStart="80px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/set_message_off" />

        <TextView
            android:id="@+id/mesgsae_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/menu_notify_msg"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/m00_font_size_36pt" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4" />
        <CheckBox
            android:id="@+id/mesgsae_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="72px"
            android:background="@drawable/longsit_check_box_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="right" />
    </LinearLayout>
    <!--QQ-->
    <LinearLayout
        android:id="@+id/QQ_layout"
        android:layout_width="fill_parent"
