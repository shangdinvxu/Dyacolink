<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chart_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/m00_btn_load_20_more_margin"
    android:paddingBottom="@dimen/m00_btn_load_20_more_margin"
    android:paddingStart="@dimen/wallet_margin_left"
    android:paddingEnd="@dimen/wallet_margin_left">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="周四"
            android:gravity="center"/>
        <TextView
            android:id="@+id/date"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2月1日"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/count"
            android:textSize="20dp"
            android:gravity="right|center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="0"
            />
        <TextView
            android:id="@+id/unit_step"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="@string/unit_step"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:gravity="left|center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/percent"
            android:layout_weight="1"
            android:text="50%"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>

</LinearLayout>